<Window x:Class="TicTacToeWPF.ComPortSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeWPF"
        mc:Ignorable="d"
        Title="Select COM Port" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Select COM Port:"/>
            <ComboBox x:Name="comPortComboBox" Width="200" Margin="5"/>
            <Button Content="OK" Click="OkButton_Click" Width="100" Margin="5" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
